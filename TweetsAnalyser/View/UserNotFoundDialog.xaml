<Window x:Class="TweetsAnalyser.View.UserNotFoundDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TweetsAnalyser.View"
        mc:Ignorable="d"
        Title="Error" Height="100" Width="300"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <Grid>
        <Image  HorizontalAlignment="Left" Source="/Images/error.ico" Height="50" Margin="10,0,0,10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Taki użytkownik nie istnieje!" />
            <Button Content="Ok" HorizontalAlignment="Center" Padding="20,2,20,2" Margin="0,10,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
